

{{!--section--}}
<section class="section my-4">
    <div class="continer text-center">
        <div class="title py-5" style="color:white;">
            <h1>Image Repo</h1>
            <p class="subtitle">Upload images to the <strong>storage</strong></p>
        </div>
        <div class="row justify-content-center">
            <div class="col-8">
                <form action="/uploadmultiple" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="col-8">
                            <input type="file" class="form-control" name="images" id="formFile" multiple>
                        </div>
                        <div class="col-2">
                            <input type="submit" class="btn btn-warning" value="Upload Image">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <section class="mt-5" style="margin: 0 10px;">
            <div class="row" style="justify-content: space-evenly;">
                    {{#each images }}
                        {{#each this}}
                            {{#if imageBase64}}
                                <div class="col-3" style="width: inherit; padding: 10px;">
                                    <div class="card shadow" style="width: 18rem;">
                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top img-fluid" alt={{filename}} style="    height: 200px;">
                                        <div class="card-body">
                                            <h3>{{images}}</h3>
                                            <p class="card-text">{{filename}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/if}}
                        {{/each}}
                    {{/each}}
            </div>
        </section>
    </div>
</section>